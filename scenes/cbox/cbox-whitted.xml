<scene>
  <mode type="progressive"/>
	<integrator type="path">
		<integer name="maxDepth" value="5"/>
    <integer name="sampleNum" value="1"/>
	</integrator>

	<sensor type="perspective">
		<float name="fov" value="27.7856"/>
		<transform name="toWorld">
			<scale x="-1" y="1" z="1"/>

			<lookat target="0, 0.893051, 4.41198" origin="0, 0.919769, 5.41159" up="0, 1, 0"/>
		</transform>

		<sampler type="independent">
			<integer name="sampleCount" value="512"/>
		</sampler>

		<film type="hdrfilm">
      <string name="filename" value="mirror_pt_10spp.png"/>
			<integer name="height" value="600"/>
			<integer name="width" value="800"/>
		</film>
	</sensor>

	<shape type="sphere">
		<transform name="toWorld">
			<translate x="-0.4219" y="0.3301" z="-0.2796"/>
		</transform>
		<float name="radius" value="0.3261"/>

		<bsdf type="mirror"/>
	</shape>

	<shape type="obj">
		<string name="filename" value="meshes/walls.obj"/>

		<bsdf type="diffuse">
			<rgb name="reflectance" value="0.725 0.71 0.68"/>
		</bsdf>
	</shape>

	<shape type="obj">
		<string name="filename" value="meshes/rightwall.obj"/>

		<bsdf type="diffuse">
			<rgb name="reflectance" value="0.161 0.133 0.427"/>
		</bsdf>
	</shape>

	<shape type="obj">
		<string name="filename" value="meshes/leftwall.obj"/>

		<bsdf type="diffuse">
			<rgb name="reflectance" value="0.630 0.065 0.05"/>
		</bsdf>
	</shape>

	<shape type="obj">
		<string name="filename" value="meshes/light.obj"/>
		<transform name="toWorld">
			<scale x="1" y="1" z="1"/>
		</transform>

		<emitter type="area">
			<rgb name="radiance" value="40 40 40"/>
		</emitter>

	</shape>
</scene>
