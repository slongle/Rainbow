		<film type="hdrfilm">
			<string name="filename" value="veach-mis.png"/>
			<integer name="width" value="768"/>
			<integer name="height" value="512"/>
			<boolean name="banner" value="true"/>

			<rfilter type="gaussian"/>
		</film>
